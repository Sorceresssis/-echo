{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "element-plus/global"
    ]
  },
  "vueCompilerOptions": {
    "strictNullChecksTypeScript": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/render/locales/en.js",
    "src/render/locales/en.js",
    "src/render/locales/zh-CN.tjs",
    "src/render/locales/zh-CN.tjs"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}